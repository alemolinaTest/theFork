<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog_Light_FullWidth">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">20%</item>
    </style>

    <!--    BUTTON STYLES-->

    <style name="ButtonWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_header_medium</item>
        <item name="android:background">@drawable/rounded_background_white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Button" parent="Theme.AppCompat.Light.NoActionBar">
